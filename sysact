#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸšª leave dwm\nğŸ”ƒ renew dwm\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ“º shutdown\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ”ƒ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ» hibernate') slock $ctl hibernate ;;
	'ğŸ’¤ sleep') slock $ctl suspend ;;
	'ğŸ”ƒ reboot') sudo $ctl reboot -i ;;
	'ğŸ“º shutdown') sudo $ctl poweroff -i ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
